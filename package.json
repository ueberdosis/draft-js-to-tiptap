{
  "name": "draft-to-tiptap",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "bun build --format esm --input src/index.ts --outdir=./dist && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/draft-js": "^0.11.18",
    "@types/prosemirror-model": "^1.17.0"
  }
}
